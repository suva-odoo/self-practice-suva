<?xml version="1.0" encoding="UTF-8"?>

<odoo>
<record id="travel_booking_action" model="ir.actions.act_window">
    <field name="res_model">travel.booking</field>
    <field name="view_mode">tree,form</field>
</record>

<record id="travel_booking_view_form" model="ir.ui.view">
    <field name="name">travel.booking.form</field>
    <field name="model">travel.booking</field>
    <field name="arch" type="xml">
    <form>
      <header>
          <field name="state" widget="statusbar" options="{'clickable':1}"/>
      </header>
      <sheet>
         <group>
         <field name="name"/>
         <field name="country_id" />
         <field name="state_id"/>
         <field name="city"/>
         <field name="place_id"/>
         <field name="place_type"/>
         <field name="travel_facilites_ids" widget="many2many_tags"/>
         <field name="bedrooms"/>
         <field name="beds"/>
         <field name="bathrooms"/>
         <field name="no_of_guests"/>
         <field name="description"/>
         <field name="rent"/>
       
        
         <field name="transportation_ids">
          <tree>
        
         <button name="action_accept" type="object" title="Accept" icon="fa-check" class="oe_highlight" />
         <button name="action_refuse" type="object" title="Refuse" icon="fa-times" class="btn-danger"/>
         </tree>
         </field>
         
         <field name="total"/>
         <field name="book_from"/>
         <field name="book_to" />

         </group>
      </sheet>
    </form>
    </field>
</record>

</odoo>


